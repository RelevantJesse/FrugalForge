@page
@model WowAhPlanner.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<h1>Log in</h1>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="card">
        <label style="display:block;margin-bottom:0.5rem">
            Username<br />
            <input name="Input.Username" value="@Model.Input.Username" style="width:100%" />
        </label>
        <label style="display:block;margin-bottom:0.5rem">
            Password<br />
            <input name="Input.Password" type="password" style="width:100%" />
        </label>
        <label style="display:block;margin-bottom:0.75rem">
            <input name="Input.RememberMe" type="checkbox" value="true" @(Model.Input.RememberMe ? "checked" : null) />
            Remember me
        </label>
        <button type="submit">Log in</button>
        <a href="/Account/Register" style="margin-left:0.75rem">Register</a>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <p role="alert">@Model.ErrorMessage</p>
    }
</form>

