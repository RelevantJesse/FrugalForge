@page
@model WowAhPlanner.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="card">
        <label style="display:block;margin-bottom:0.5rem">
            Username<br />
            <input name="Input.Username" value="@Model.Input.Username" style="width:100%" />
        </label>
        <label style="display:block;margin-bottom:0.5rem">
            Password<br />
            <input name="Input.Password" type="password" style="width:100%" />
        </label>
        <label style="display:block;margin-bottom:0.75rem">
            Confirm password<br />
            <input name="Input.ConfirmPassword" type="password" style="width:100%" />
        </label>
        <button type="submit">Create account</button>
        <a href="/Account/Login" style="margin-left:0.75rem">Log in</a>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <p role="alert">@Model.ErrorMessage</p>
    }
</form>

