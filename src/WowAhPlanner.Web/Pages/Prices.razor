@page "/prices"
@using WowAhPlanner.Infrastructure.Pricing
@inject SelectionState Selection
@inject WowAhPlanner.Core.Ports.IRecipeRepository RecipeRepository
@inject WowAhPlanner.Core.Ports.IItemRepository ItemRepository
@inject PriceBrowseService PriceBrowse

<PageTitle>Prices</PageTitle>

<h1>Prices</h1>

<div class="card">
    <h3>Filters</h3>

    <div class="grid">
        <label>
            Profession
            <select @bind="_professionId" @bind:after="ReloadAsync">
                <option value="0">(all)</option>
                @foreach (var p in _professions)
                {
                    <option value="@p.ProfessionId">@p.Name (@p.ProfessionId)</option>
                }
            </select>
        </label>

        <label>
            Provider
            <select @bind="_providerName" @bind:after="ReloadAsync">
                <option value="">(all)</option>
                @foreach (var p in _providers)
                {
                    <option value="@p">@p</option>
                }
            </select>
        </label>

        <label>
            Search
            <input type="text" @bind="_search" @bind:after="ApplyFilters" placeholder="item name or id" />
        </label>
    </div>

    <p>
        Realm: <span class="badge">@Selection.ToRealmKey().ToString()</span>
        Showing: <span class="badge">@_filtered.Count</span>
    </p>
</div>

@if (!string.IsNullOrWhiteSpace(_uiError))
{
    <div class="card">
        <h3>Error</h3>
        <pre style="white-space:pre-wrap">@_uiError</pre>
    </div>
}
else if (!_ready)
{
    <div class="card">
        <h3>Loading</h3>
        <p>Loading pricesâ€¦</p>
    </div>
}
else
{
    <div class="card">
        <h3>Cached prices</h3>

        <table>
            <thead>
            <tr>
                <th>Item</th>
                <th>Min</th>
                <th>Median</th>
                <th>Provider</th>
                <th>Snapshot</th>
                <th>Cached</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var row in _filtered)
            {
                <tr>
                    <td>
                        @(_itemNames.GetValueOrDefault(row.ItemId) ?? $"Item {row.ItemId}")
                        <span class="badge">@row.ItemId</span>
                    </td>
                    <td>@(new Money(row.MinBuyoutCopper).ToGscString())</td>
                    <td>@(row.MedianCopper is long med ? new Money(med).ToGscString() : "-")</td>
                    <td>@row.ProviderName</td>
                    <td>@row.SnapshotTimestampUtc.ToString("u")</td>
                    <td>@row.CachedAtUtc.ToString("u")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

@code {
    private bool _ready;
    private string? _uiError;

    private IReadOnlyList<Profession> _professions = [];
    private IReadOnlyList<string> _providers = [];
    private Dictionary<int, string> _itemNames = new();

    private int _professionId;
    private string _providerName = "";
    private string _search = "";

    private IReadOnlyList<PriceBrowseService.CachedPriceRow> _rows = [];
    private List<PriceBrowseService.CachedPriceRow> _filtered = [];
    private HashSet<int>? _professionItemIds;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _ready = false;
        _uiError = null;

        try
        {
            await Selection.EnsureLoadedAsync();
            _professions = await RecipeRepository.GetProfessionsAsync(Selection.GameVersion, CancellationToken.None);
            _professionId = Selection.ProfessionId;

            var realm = Selection.ToRealmKey();
            _providers = await PriceBrowse.GetProvidersAsync(realm, CancellationToken.None);

            var items = await ItemRepository.GetItemsAsync(Selection.GameVersion, CancellationToken.None);
            _itemNames = new Dictionary<int, string>(items);

            await ReloadAsync();
        }
        catch (Exception ex)
        {
            _uiError = ex.ToString();
            _rows = [];
            _filtered = [];
        }
        finally
        {
            _ready = true;
            StateHasChanged();
        }
    }

    private async Task ReloadAsync()
    {
        _uiError = null;
        _professionItemIds = null;

        try
        {
            var realm = Selection.ToRealmKey();
            _rows = await PriceBrowse.GetCachedPricesAsync(realm, _providerName, CancellationToken.None);

            if (_professionId > 0)
            {
                _professionItemIds = await BuildProfessionItemIdsAsync(_professionId);
            }

            ApplyFilters();
        }
        catch (Exception ex)
        {
            _uiError = ex.ToString();
            _rows = [];
            _filtered = [];
        }

        StateHasChanged();
    }

    private async Task<HashSet<int>> BuildProfessionItemIdsAsync(int professionId)
    {
        var recipes = await RecipeRepository.GetRecipesAsync(Selection.GameVersion, professionId, CancellationToken.None);
        var ids = new HashSet<int>();

        foreach (var recipe in recipes)
        {
            foreach (var reagent in recipe.Reagents)
            {
                ids.Add(reagent.ItemId);
            }

            if (recipe.Output is { } output)
            {
                ids.Add(output.ItemId);
            }
        }

        return ids;
    }

    private void ApplyFilters()
    {
        var q = (_search ?? "").Trim();

        IEnumerable<PriceBrowseService.CachedPriceRow> rows = _rows;
        if (_professionItemIds is not null)
        {
            rows = rows.Where(r => _professionItemIds.Contains(r.ItemId));
        }

        if (q.Length > 0)
        {
            rows = rows.Where(r =>
                r.ItemId.ToString().Contains(q, StringComparison.OrdinalIgnoreCase) ||
                (_itemNames.GetValueOrDefault(r.ItemId) ?? "").Contains(q, StringComparison.OrdinalIgnoreCase));
        }

        _filtered = rows.ToList();
    }
}
